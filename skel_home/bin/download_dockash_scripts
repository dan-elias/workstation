#!/bin/bash

# Download scripts from dockash repo to the directory containing this script
set -e

tmp_dir=~/junk/dockash_download
dest_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
mkdir -p $tmp_dir
pushd $tmp_dir
curl --location --output dockash.zip  https://github.com/dan-elias/dockash/archive/refs/heads/master.zip
unzip dockash.zip
cp dockash-master/bin/* $dest_dir
popd
rm -r $tmp_dir


